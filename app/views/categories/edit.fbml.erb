<h1>Editing category</h1>

<% facebook_form_for(@category) do |f| %>
  <%= f.error_messages %>

    <%= f.text_area :description %>
  <fb:editor-buttonset>
    <div align="center">
      <fb:submit><%= image_tag(ACCEPT_BUTTON, {:title => 'accept', :alt => 'accept'}) %></fb:submit>
      <%= link_to image_tag(CANCEL_BUTTON, {:title => 'cancel', :alt => 'cancel'}), categories_path %>
    </div>
  </fb:editor-buttonset>
<% end %>

<%= link_to 'Show', @category %>
