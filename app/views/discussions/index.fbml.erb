<h1>Listing discussions</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% for discussion in @discussions %>
  <tr>
    <td><%=h discussion.topic %></td>
    <td><%=h discussion.title %></td>
    <td><%=h discussion.content %></td>
    <td><%= link_to 'Show', discussion %></td>
    <td><%= link_to 'Edit', edit_discussion_path(discussion) %></td>
    <td><%= button_to 'Destroy', discussion, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New discussion', new_discussion_path %>
